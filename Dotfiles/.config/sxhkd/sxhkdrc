# program launcher
super + r
	j4-dmenu-desktop

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# screenshot
super + shift + s
	maim -s | xclip -selection clipboard -t image/png

# screenshot of current window
Print
	~/Scripts/screenshot.sh
	#maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

# raise volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

# lower volume
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

# poweroff menu
super + shift + e
	~/Scripts/poweroff.sh

# polybar restart menu
super + shift + p
	~/Scripts/restartpolybar.sh

# close
super + shift + q
	bspc node -c

# kill
super + shift + k
	bspc node -k

